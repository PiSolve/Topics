<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:ellipsize="end"
            android:id="@+id/topic_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLength="100"
            android:maxLines="2"
            android:padding="4dp"
            android:singleLine="false"
            android:text="ksjbckabskcbfbjsabcjaskcbakjsbkjabkjbckjabfkjabskfjbakfbkjabskabkjfbakjbfkjabfkjbakjfbkjabfkjbakfjbakjbfjkabfbafjabjabkjfbkjabfkbakbkjabfkjbkafbabbk"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:gravity="left"
            android:layout_below="@id/topic_title"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/upvote_topic"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_width="25dp"
                android:src="@drawable/vupvote" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/upvote_count"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="12000"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/downvote_topic"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:src="@drawable/downvote" />


        </LinearLayout>

        <ImageView
            android:id="@+id/star_topic"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/topic_title"
            android:layout_height="25dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="25dp"
            android:src="@drawable/star_icon" />

    </RelativeLayout>
</layout>